<Page x:Class="DocXGenerateGibdd.Pages.SearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Title="SearchPage" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            
            <TextBlock Text="Введите номер"
                       Margin="5"
                       Height="20"
                       Width="100"/>
            
            <TextBox Name="SearchBox"
                     Text="{Binding CertificateNumber}"
                     Height="20"
                     Width="100"
                     Margin="5"/>
            <Border CornerRadius="10"
                    Margin="5"
                    Background="Chartreuse">
                
                <Button Name="SearchAdnGenerate"
                        Margin="10"
                        Height="20"
                        Width="100"
                        Background="Chartreuse"
                        Content="Найти и создать"
                        Click="SearchAdnGenerate_OnClick"/>
            </Border>
        </StackPanel>
    </Grid>
</Page>
